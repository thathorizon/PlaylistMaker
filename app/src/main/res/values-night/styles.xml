<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyleOnMainDisplay" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/indent_from_edge</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black2</item>
        <item name="android:textSize">@dimen/standart_textsize</item>
        <item name="cornerRadius">@dimen/cornerRadiusButtons</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black2</item>
        <item name="iconPadding">@dimen/indent_icon_to_text</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="ColorOfBackgroundMainDisplay">
        <item name="android:background">@color/black2</item>
    </style>

    <style name="SettingsDisplayTextes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/indent_from_edge</item>
        <item name="android:layout_marginVertical">@dimen/indent_from_edges_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/little_textsize</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingsDisplayImages">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="FrameLayoutSettingsDisplay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
    </style>

    <style name="ColorOfBackgroundSettingsDisplay">
        <item name="android:background">@color/black2</item>
    </style>

    <style name="StyleOfMainTextOnSettingsDisplay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">@dimen/standart_textsize</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleOfArrowBackSettingsDisplay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/indent_from_edge</item>
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="StyleForSwitch">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">11dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="trackTint">@color/trackTintForSwitchNight</item>
        <item name="thumbTint">@color/switch_thumb_color</item>
    </style>

    <style name="SearchDisplayInputText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginHorizontal">@dimen/indent_from_edge</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:drawablePadding">@dimen/indent_icon_to_text</item>
        <item name="android:textColorHint">@color/black2</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/little_textsize</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/black2</item>
        <item name="android:importantForAutofill">no</item>
    </style>

    <style name="ButtonStyleClearInputText">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginVertical">14dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:backgroundTint">@color/white2</item>
        <item name="tint">@color/black2</item>
        <item name="android:visibility">gone</item>
        <item name="iconPadding">8dp</item>
    </style>

    <style name="AppNameOnMainDisplay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/indent_from_edge</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/standart_textsize</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="RVStyleOnSearchDisplay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/black2</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="AlbumCoverStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginStart">13dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@color/black2</item>
    </style>

    <style name="SongNameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/little_textsize</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MainLinearHorizontalOnSearchDisplay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LinearVerticalOnSearchDisplay">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LittleLinearHorizontalOnSearchDisplay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AuthorOfSongStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DotStyle">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="DurationOfSongStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FullInformationStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginBottom">19dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="LinearStyleOfSearchDisplay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ImageStyleOnSearchDisplay">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginTop">102dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ProblemsTextStyleOnSearchDisplay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonRefreshStyleOnSearchDisplay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black2</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
</resources>